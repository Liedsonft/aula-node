
<html>
    <header>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </header>
    <body>
    

        <form action="/new" method="post">
            <fieldset>
                <fieldset class="grupo">
                    <div class="campo">
                        <label for="nome">Título</label>
                        <input type="text" id="nome" name="titulo" style="width: 10em" value="<%= customer.titulo %>">
                    </div>
                    <div class="campo">
                        <label for="snome">Autor</label>
                        <input type="text" id="snome" name="autor" style="width: 10em" value="<%= customer.autor %>">
                    </div>
                </fieldset>
                    <div class="campo">
                    </div>
        <div class="campo">
            <label for="email">Ano</label>
            <input type="number" id="email" name="ano" style="width: 5em" value="<%= customer.ano %>">
        </div>

        <div class="campo">
            <label for="mensagem">Descrição</label>
            <textarea rows="6" style="width: 20em" id="mensagem" name="mensagem"></textarea>
        </div>
        <input type="hidden" name="id" value="<%= customer._id %>"/>


        <button type="submit" name="submit">Enviar</button>
    </fieldset>
</form> 
    </body>
<script>
    if(window.location.search) {
        const error = window.location.search.split('=')[1];
        alert(decodeURI (error));
    }
</script>
</html>